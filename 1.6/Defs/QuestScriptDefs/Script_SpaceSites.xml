<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<QuestScriptDef>
		<defName>VGE_OpportunitySite_SolidCoreAsteroid</defName>
		<randomlySelectable>false</randomlySelectable>
		<givenBy>
			<li>OrbitalScanner</li>
		</givenBy>
		<rootSelectionWeight>1</rootSelectionWeight>
		<isRootSpecial>true</isRootSpecial>
		<autoAccept>true</autoAccept>
		<questNameRules>
			<rulesStrings>
				<li>questName->Solid [resource] Asteroid</li>
			</rulesStrings>
		</questNameRules>
		<questDescriptionRules>
			<rulesStrings>
				<li>questDescription-> [discoveryMethod] the location of a solid-core asteroid orbiting the planet. Its shell is dense vacstone, but within lies a core of [resource] waiting to be mined.\n\nAsteroids like these usually remain in deep space, but this one has drifted into low orbit. It is only a matter of time before someone else claims it.\n\nYou can reach the asteroid with transport pods, shuttles, or a gravship. Equip your colonists with sufficient orbital apparel before departing.</li>
			</rulesStrings>
		</questDescriptionRules>
		<questDescriptionAndNameRules>
			<rulesStrings>
      </rulesStrings>
		</questDescriptionAndNameRules>
		<canOccurOnAllPlanetLayers>true</canOccurOnAllPlanetLayers>
		<root Class="QuestNode_Sequence">
			<nodes>
				<li Class="QuestNode_IsSet">
					<name>discoveryMethod</name>
					<elseNode Class="QuestNode_RandomNode">
						<nodes>
							<li Class="QuestNode_Set">
								<name>discoveryMethod</name>
								<value>You have discovered</value>
							</li>
						</nodes>
					</elseNode>
				</li>
				<li Class="QuestNode_Root_Asteroid">
					<layerDef>Orbit</layerDef>
					<worldObjectDef>VGE_CoreAsteroidMiningSite</worldObjectDef>
					<mineables>
						
						<li>VGE_Compressed_Steel</li>
						<li>VGE_Compressed_Silver</li>
						<li>VGE_Compressed_Gold</li>
						<li>VGE_Compressed_Uranium</li>
						<li>VGE_Compressed_Plasteel</li>
						<li>VGE_Compressed_Jade</li>
					</mineables>
				</li>
			</nodes>
		</root>
	</QuestScriptDef>
</Defs>