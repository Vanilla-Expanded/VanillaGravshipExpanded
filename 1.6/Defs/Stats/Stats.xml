<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <StatDef>
        <defName>VGE_GravshipTargeting</defName>
        <label>gravship targeting</label>
        <description>How well this person operates the targeting terminal and how accurate their shots with gravship weaponry will be.</description>
        <category>PawnCombat</category>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0.01</minValue>
        <toStringStyle>PercentZero</toStringStyle>
        <neverDisabled>true</neverDisabled>
        <statFactors>
            <li>ShootingAccuracyPawn</li>
        </statFactors>
        <skillNeedFactors>
            <li Class="RimWorld.SkillNeed_BaseBonus">
                <skill>Shooting</skill>
                <baseValue>0.0</baseValue>
                <bonusPerLevel>0.025</bonusPerLevel>
            </li>
            <li Class="RimWorld.SkillNeed_BaseBonus">
                <skill>Intellectual</skill>
                <baseValue>0.0</baseValue>
                <bonusPerLevel>0.025</bonusPerLevel>
            </li>
        </skillNeedFactors>
        <capacityFactors>
            <li>
                <capacity>Consciousness</capacity>
                <weight>1</weight>
            </li>
            <li>
                <capacity>Sight</capacity>
                <weight>1</weight>
            </li>
            <li>
                <capacity>Manipulation</capacity>
                <weight>0.5</weight>
            </li>
        </capacityFactors>
    </StatDef>

    <StatDef>
        <defName>VGE_AccuracyGlobal</defName>
        <label>global accuracy</label>
        <description>Accuracy when firing at targets on the world map. Multiplied by the operator's gravship targeting skill.</description>
        <category>Weapon_Ranged</category>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0.01</minValue>
        <maxValue>1</maxValue>
        <toStringStyle>PercentZero</toStringStyle>
        <showIfUndefined>false</showIfUndefined>
        <displayPriorityInCategory>5105</displayPriorityInCategory>
    </StatDef>

