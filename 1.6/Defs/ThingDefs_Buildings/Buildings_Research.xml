<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="GravshipComponentBase">
		<defName>VGE_GravtechConsole</defName>
		<label>gravtech console</label>
		<description>An interface used to analyze gravdata gathered from gravship launches and travel. It draws power directly from the grav engine.</description>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Things/Structures/GravtechResearchBench/GravtechResearchBench</texPath>
			<drawSize>(4,2)</drawSize>
		</graphicData>
		<costList>
			<Steel>100</Steel>
			<ComponentIndustrial>6</ComponentIndustrial>
		</costList>
		<fillPercent>0.3</fillPercent>
		<statBases>
			<WorkToBuild>3000</WorkToBuild>
			<MaxHitPoints>250</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Beauty>-4</Beauty>
			<Mass>10</Mass>
			<VGE_MaintenanceSensitivity>2</VGE_MaintenanceSensitivity>
		</statBases>
		<size>(3,1)</size>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_GravshipFacility">
        <compClass>VanillaGravshipExpanded.CompGravtechConsole</compClass>
				<maxSimultaneous>1</maxSimultaneous>
				<maxDistance>200</maxDistance>
				<requiresLOS>false</requiresLOS>
			</li>
			<li Class="VanillaGravshipExpanded.CompProperties_GravdataYield">
				<multiplier>5</multiplier>
			</li>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="VanillaGravshipExpanded.CompProperties_GravMaintainable">

            </li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>StandardGravtech</li>
		</researchPrerequisites>
		<rotatable>true</rotatable>
		<canOverlapZones>false</canOverlapZones>
		<resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<designationCategory>Odyssey</designationCategory>
		<hasInteractionCell>true</hasInteractionCell>
		<interactionCellOffset>(0, 0,-1)</interactionCellOffset>
		<terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
		<uiOrder>2101</uiOrder>
	</ThingDef>
	<ThingDef ParentName="GravshipComponentBase">
		<defName>VGE_GravshipBlackBox</defName>
		<label>gravship black box</label>
		<description>An indestructible advanced recorder integrated into the gravshipâ€™s systems. It greatly increases gravdata yield, captures any overflow that would normally be wasted, and allows stored gravdata to be converted directly into research points. A gravship can support only one black box.</description>
		<thingClass>VanillaGravshipExpanded.Building_GravshipBlackBox</thingClass>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>Things/Structures/GravshipBlackBox/GravshipBlackBox</texPath>
			<drawSize>(2,1)</drawSize>
		</graphicData>
		<costList>
			<GravlitePanel>80</GravlitePanel>
			<ComponentIndustrial>4</ComponentIndustrial>
			<ComponentSpacer>8</ComponentSpacer>
		</costList>
		<useHitPoints>false</useHitPoints>
		<statBases>
			<Flammability>0</Flammability>
			<Beauty>-10</Beauty>
			<Mass>15</Mass>
		</statBases>
		<pathCost>20</pathCost>
		<size>(2,1)</size>
		<passability>PassThroughOnly</passability>
		<rotatable>true</rotatable>
		<fillPercent>0.4</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
		<comps>
			<li Class="CompProperties_GravshipFacility">
				<requiresLOS>false</requiresLOS>
				<maxSimultaneous>1</maxSimultaneous>
				<maxDistance>500</maxDistance>
			</li>
			<li Class="VanillaGravshipExpanded.CompProperties_GravdataYield">
				<multiplier>2.0</multiplier>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<tradeTags>
			<li>GravshipUpgrade</li>
		</tradeTags>
	</ThingDef>
</Defs>