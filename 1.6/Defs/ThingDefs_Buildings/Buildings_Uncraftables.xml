<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="GravshipComponentBase">
		<defName>VGE_GunnerSubpersonaCore</defName>
		<label>gunner subpersona core</label>
		<description>A low-grade subpersona specialized in gravship combat. It can link with a single gravship artillery piece and control it the same way a crewmember manning a targeting terminal can. It's combat capabilities are beyond that of even the best human gunner. A gravship can support up to two gunner subpersona cores.</description>
		<thingClass>VanillaGravshipExpanded.Building_GunnerSubpersonaCore</thingClass>
		<tickerType>Normal</tickerType>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Structures/GunnerSubpersonaCore/GunnerSubpersonaCore</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1, 1)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.7</Flammability>
			<Beauty>0</Beauty>
			<Mass>20</Mass>
		</statBases>
		<size>(1, 1)</size>
		<fillPercent>0.4</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>20</pathCost>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
		<comps>
			<li Class="CompProperties_GravshipFacility">
				<requiresLOS>false</requiresLOS>
				<maxSimultaneous>2</maxSimultaneous>
				<maxDistance>500</maxDistance>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
		</comps>
		<tradeTags>
			<li>GravshipUpgrade</li>
		</tradeTags>
	</ThingDef>
	<ThingDef ParentName="GravshipComponentBase">
		<defName>VGE_MaintenanceHub</defName>
		<label>maintenance hub</label>
		<description>A centralized system that optimizes and automates routine upkeep across the gravship. It passively reduces the maintenance decay rate of all connected machinery. Requires power to work.</description>
		<thingClass>Building</thingClass>
		<tickerType>Normal</tickerType>
		<costList>
			<Steel>80</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
			<ComponentSpacer>3</ComponentSpacer>
			<GravlitePanel>60</GravlitePanel>
		</costList>
		<graphicData>
			<texPath>Things/Structures/GravshipMaintenanceHub/GravshipMaintenanceHub</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2, 2)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.2</Flammability>
			<Beauty>-10</Beauty>
			<Mass>40</Mass>
			<VGE_MaintenanceSensitivity>1</VGE_MaintenanceSensitivity>
		</statBases>
		<size>(2, 2)</size>
		<rotatable>false</rotatable>
		<fillPercent>0.4</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>20</pathCost>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
		<comps>
			<li Class="CompProperties_GravshipFacility">
        <statOffsets>
          <VGE_GlobalMaintenanceSensitivity>-0.25</VGE_GlobalMaintenanceSensitivity>
        </statOffsets>
				<requiresLOS>false</requiresLOS>
				<maxSimultaneous>2</maxSimultaneous>
				<maxDistance>500</maxDistance>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>200</basePowerConsumption>
			</li>
			<li Class="VanillaGravshipExpanded.CompProperties_GravMaintainable">
       
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<tradeTags>
			<li>GravshipUpgrade</li>
		</tradeTags>
	</ThingDef>
	<ThingDef ParentName="GravshipComponentBase">
		<defName>VGE_CapacitorHarmonizer</defName>
		<label>capacitor harmonizer</label>
		<description>A specialized device that balances and synchronizes energy flow between nearby capacitors. It passively boosts their charge and discharge efficiency to peak performance. Requires power to operate.</description>
		<thingClass>Building</thingClass>
		<tickerType>Normal</tickerType>
		<costList>
			<Steel>100</Steel>
			<ComponentSpacer>6</ComponentSpacer>
			<GravlitePanel>60</GravlitePanel>
		</costList>
		<graphicData>
			<texPath>Things/Structures/CapacitorHarmonizer/CapacitorHarmonizer</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3, 3)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.2</Flammability>
			<Beauty>-10</Beauty>
			<Mass>35</Mass>
			<VGE_MaintenanceSensitivity>3</VGE_MaintenanceSensitivity>
		</statBases>
		<size>(2, 2)</size>
		<fillPercent>0.4</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>20</pathCost>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
		<comps>
			<li Class="CompProperties_GravshipFacility">
				<requiresLOS>false</requiresLOS>
				<maxSimultaneous>4</maxSimultaneous>
				<maxDistance>500</maxDistance>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
			</li>
			<li Class="VanillaGravshipExpanded.CompProperties_GravMaintainable">
       
			</li>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Facility">
				<maxSimultaneous>20</maxSimultaneous>
				<maxDistance>14.9</maxDistance>
			</li>
		</comps>
		<tradeTags>
			<li>GravshipUpgrade</li>
		</tradeTags>
	</ThingDef>
	<ThingDef ParentName="GravshipComponentBase">
		<defName>VGE_Gravlift</defName>
		<label>gravlift</label>
		<description>A complex vertical launch and stabilization platform integrated into the gravship's core structure. The gravlift provides the immense thrust required for vertical takeoff from planetary surfaces and stabilizes orbital insertion, allowing the gravship to remain suspended in space.</description>
		<thingClass>VanillaGravshipExpanded.Building_Gravlift</thingClass>
		<tickerType>Normal</tickerType>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Structures/Gravlift/Gravlift</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2, 2)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.3</Flammability>
			<Beauty>-10</Beauty>
			<Mass>40</Mass>
		</statBases>
		<size>(2, 2)</size>
		<rotatable>false</rotatable>
		<fillPercent>0.4</fillPercent>
		<passability>PassThroughOnly</passability>
		<pathCost>20</pathCost>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
		<costList>
			<Gravcore>1</Gravcore>
			<GravlitePanel>60</GravlitePanel>
			<ComponentSpacer>4</ComponentSpacer>
		</costList>
		<comps>
			<li Class="CompProperties_GravshipFacility">
				<requiresLOS>false</requiresLOS>
				<maxSimultaneous>1</maxSimultaneous>
				<maxDistance>500</maxDistance>
			</li>
		</comps>
		<tradeTags>
			<li>GravshipUpgrade</li>
		</tradeTags>
	</ThingDef>
</Defs>