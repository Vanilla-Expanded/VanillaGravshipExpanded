<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>VGE_Agrocell</defName>
		<label>agrocell</label>
		<description>An enclosed, space-efficient growing unit designed for use on gravships. Built into the floor for unobstructed movement, it features integrated sunlamps and a nutrient system that must remain powered, as plants will die if power is cut.</description>
		<noRightClickDraftAttack>true</noRightClickDraftAttack>
		<thingClass>Building_PlantGrower</thingClass>
		<graphicData>
			<texPath>Things/Structures/Agrocell/Agrocell</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,3)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<castEdgeShadows>true</castEdgeShadows>
		<altitudeLayer>LowPlant</altitudeLayer>
		<defaultPlacingRot>East</defaultPlacingRot>
		<passability>Standable</passability>
		<pathCost>0</pathCost>
		<constructEffect>ConstructMetal</constructEffect>
		<fillPercent>0</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<statBases>
			<WorkToBuild>2800</WorkToBuild>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Cleanliness>-3</Cleanliness>
		</statBases>
		<size>(1,3)</size>
		<costList>
			<Steel>80</Steel>
			<ComponentSpacer>1</ComponentSpacer>
			<GravlitePanel>30</GravlitePanel>
		</costList>
		<fertility>3.2</fertility>
		<building>
			<defaultPlantToGrow>Plant_Rice</defaultPlantToGrow>
			<sowTag>Hydroponic</sowTag>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
		</building>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Glower">
				<overlightRadius>2.0</overlightRadius>
				<glowRadius>2</glowRadius>
				<glowColor>(370,370,370,0)</glowColor>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>160</basePowerConsumption>
			</li>
			<li Class="CompProperties_Schedule">
				<!-- Match plant growing times -->
				<startTime>0.25</startTime>
				<endTime>0.8</endTime>
				<offMessage>Off for plant resting period</offMessage>
			</li>
		</comps>
		<researchPrerequisites>
			<li>VGE_AdvancedGravtech</li>
		</researchPrerequisites>
		<terrainAffordanceNeeded>Substructure</terrainAffordanceNeeded>
		<designationCategory>Odyssey</designationCategory>
	</ThingDef>
</Defs>