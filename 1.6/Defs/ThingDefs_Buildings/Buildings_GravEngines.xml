<Defs>

  <!-- For fast searching the map for minified grav engines -->
  <ThingDef ParentName="MinifiedThing">
    <defName>VGE_MinifiedGravjumperEngine</defName>
  </ThingDef>

  <ThingDef ParentName="MinifiedThing">
