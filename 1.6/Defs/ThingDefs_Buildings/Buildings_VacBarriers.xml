    </graphicData>
    <size>(2,1)</size>
    <uiIconPath>Things/Structures/VacBarriers/VacBarrier2x1_MenuIcon_south</uiIconPath>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <GravlitePanel>3</GravlitePanel>
    </costList>
    <building>
      <doorTopGraphic>
        <texPath>Things/Structures/VacBarriers/VacBarrier2x1_Top</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(2.75,2.25)</drawSize>
      </doorTopGraphic>
      <blueprintGraphicData>
        <texPath>Things/Structures/VacBarriers/VacBarrier2x1_MenuIcon</texPath>
