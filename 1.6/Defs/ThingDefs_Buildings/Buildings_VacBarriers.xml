<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="VGE_VacBarrierBase" ParentName="DoorBase" Abstract="True">
    <description>An ultrasonic barrier that prevents depressurization in space. The field compresses air molecules near the threshold, preventing gases from escaping while allowing people to freely travel through it. A vac barrier will do nothing to prevent intruders.\n\nMust be powered to prevent depressurization.</description>
    <thingClass>VanillaGravshipExpanded.Building_VacBarrier_Recolorable</thingClass>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
    <rotatable>true</rotatable>
    <graphicData>
      <shaderType>TransparentPostLight</shaderType>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <stuffCategories Inherit="False"/>
    <useStuffTerrainAffordance>false</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <useBlueprintGraphicAsGhost>true</useBlueprintGraphicAsGhost>
    <designationCategory>Odyssey</designationCategory>
    <building>
      <isAirtight>true</isAirtight>
      <isSupportDoor>true</isSupportDoor>
      <blueprintClass>Blueprint_Door</blueprintClass>
    </building>
    <designatorDropdown>VGE_VacBarriers</designatorDropdown>
    <researchPrerequisites>
      <li>OrbitalTech</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <designationHotKey>Misc1</designationHotKey>
    <uiOrder>2015</uiOrder>
    <colorGenerator Class="ColorGenerator_Single">
      <color>(146,76,237)</color>
    </colorGenerator>
  </ThingDef>

