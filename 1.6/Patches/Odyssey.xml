<Patch>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="GravshipLandingMarker"]</xpath>
        <value>
            <seeThroughFog>true</seeThroughFog>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GravEngine"]/comps</xpath>
        <value>
            <li Class="VanillaGravshipExpanded.CompProperties_HeatManager"></li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]/comps/li[@Class="CompProperties_SubstructureFootprint"]/radius</xpath>
        <value>
            <radius>12.9</radius>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]/comps/li[@Class="CompProperties_GravshipFacility"]/statOffsets/SubstructureSupport</xpath>
        <value>
            <SubstructureSupport>100</SubstructureSupport>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]/comps/li[@Class="CompProperties_GravshipFacility"]/maxSimultaneous</xpath>
        <value>
            <maxSimultaneous>10</maxSimultaneous>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]/description</xpath>
        <value>
            <description>An ultratech device used to increase the size of a gravship. It extends the area in which substructure can be built, and increases the amount of substructure that a gravship can support. Must be built near a grav engine. A gravship can support up to ten grav field extenders.</description>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]/resourcesFractionWhenDeconstructed</xpath>
        <value>
            <resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]/statBases</xpath>
        <value>
            <VGE_MaintenanceSensitivity>2</VGE_MaintenanceSensitivity>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]</xpath>
        <value>
            <tickerType>Normal</tickerType>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="GravFieldExtender"]/comps</xpath>
        <value>
            <li Class="VanillaGravshipExpanded.CompProperties_GravMaintainable">

            </li>
            <li Class="CompProperties_Breakdownable" />
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Substructure"]</xpath>
        <value>
            <uiIconPath>UI/MenuIcons/Substructure_MenuIcon</uiIconPath>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]/specialDesignatorClasses</xpath>
        <value>
            <li>VanillaGravshipExpanded.Designator_RemoveSubstructure</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs</xpath>
        <value>
            <ScenPartDef>
                <defName>VGE_ScenPart_SpawnMechDestroyers</defName>
                <label>mech destroyers</label>
                <scenPartClass>VanillaGravshipExpanded.ScenPart_SpawnMechDestroyers</scenPartClass>
                <selectionWeight>1.0</selectionWeight>
                <summaryPriority>300</summaryPriority>
                <canBeRandomlyAdded>false</canBeRandomlyAdded>
                <canBePlayerAddedRemoved>false</canBePlayerAddedRemoved>
            </ScenPartDef>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ScenarioDef[defName="TheGravship"]/scenario/parts</xpath>
        <value>
            <li Class="VanillaGravshipExpanded.ScenPart_SpawnMechDestroyers">
                <def>VGE_ScenPart_SpawnMechDestroyers</def>
            </li>
        </value>
    </Operation>

</Patch>