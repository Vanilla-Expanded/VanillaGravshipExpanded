            <designationCategory>VGE_Platform</designationCategory>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="ThrusterBase"]/designationCategory</xpath>
        <value>
            <designationCategory>VGE_Platform</designationCategory>
        </value>
