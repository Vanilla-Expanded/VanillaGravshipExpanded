<Patch>

    <!-- Odyssey category alterations -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]/label</xpath>
        <value>
            <label>Gravship</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/DesignationCategoryDef[defName="Odyssey"]</xpath>
        <value>
            <li Class="VanillaGravshipExpanded.NestedCategoryExtension">
                <iconTexPath>UI/SubcategoryIcons/SubcategoryIcon_Platform</iconTexPath>
            </li>
        </value>
    </Operation>


    <!-- Platform -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/TerrainDef[defName="Substructure"]/designationCategory</xpath>
        <value>
            <designationCategory>VGE_Platform</designationCategory>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GravshipHull"]/designationCategory</xpath>
