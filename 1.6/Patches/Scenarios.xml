<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Gravship scenario now starts with no chemfuel, since its astrofuel tanks start out filled -->
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ScenarioDef[defName="TheGravship"]/scenario/parts/li[@Class="ScenPart_StartingThing_Defined" and thingDef="Chemfuel"]</xpath>
  </Operation>

  <!-- Remove starting steel as well -->
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ScenarioDef[defName="TheGravship"]/scenario/parts/li[@Class="ScenPart_StartingThing_Defined" and thingDef="Steel"]</xpath>
  </Operation>

</Patch>