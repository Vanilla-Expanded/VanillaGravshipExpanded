<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Add standard gravtech as a research prerequisite -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="PilotConsole"]/researchPrerequisites</xpath>
    <value>
      <li>StandardGravtech</li>
    </value>
  </Operation>

  <!-- Remove basic gravtech as a research prerequisite -->
  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="PilotConsole"]/researchPrerequisites/li[text()="BasicGravtech"]</xpath>
  </Operation>

  <!-- Replace vanilla graphics with our own -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PilotConsole"]/graphicData/texPath/text()</xpath>
    <value>Things/Structures/PilotConsoles/PilotConsole/PilotConsole</value>
  </Operation>

  <!-- Update draw size -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PilotConsole"]/graphicData/drawSize/text()</xpath>
    <value>(4,3)</value>
  </Operation>

</Patch>
